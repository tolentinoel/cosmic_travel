<h1> New Scientist</h1>

<%= form_for @scientist do |f| %>
    <% if @scientist.errors.any? %>
        <% @scientist.errors.full_messages.each do |error| %>
            <li><%= error%></li>
            <% end %>
        <% end %>
    

    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :field_of_study%>
    <%= f.text_field :field_of_study%>
    <%= f.submit %>
<% end %>

